<resources>
    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>
    <style name="SpinnerTheme">
        <item name="android:textColor">#FFFFFF</item>
        <item name="android:fontFamily">@font/robotoregular</item>
    </style>
    <style name="FormTheme">
        <item name="android:fontFamily">@font/robotothin</item>
        <item name="android:textSize">18sp</item>
        <item name="android:layout_width">333dp</item>
        <item name="android:layout_height">43dp</item>
    </style>
    <style name="Buttons">
        <item name="android:background">@drawable/button</item>
        <item name="android:fontFamily">@font/cairolight</item>
        <item name="android:textColor">@color/customwhite</item>
        <item name="android:textSize">18sp</item>
    </style>

</resources>