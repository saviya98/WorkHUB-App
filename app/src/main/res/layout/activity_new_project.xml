<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/mad_background"
    tools:context=".newProject">

    <TextView
        android:id="@+id/nProHead"
        android:layout_width="117dp"
        android:layout_height="52dp"
        android:text="@string/npHead"
        android:textColor="#0B0808"
        android:textSize="36sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.152" />

    <Button
        android:id="@+id/btnNewCustomer"
        android:layout_width="195dp"
        android:layout_height="66dp"
        android:layout_marginTop="110dp"
        android:onClick="newPro"
        android:text="@string/newCustomer"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/nProHead" />

    <Button
        android:id="@+id/btnNewWorker"
        android:layout_width="195dp"
        android:layout_height="66dp"
        android:layout_marginTop="80dp"
        android:onClick="newPro"
        android:text="@string/newWorker"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/btnNewCustomer" />

    <Button
        android:id="@+id/btnNewSuplier"
        android:layout_width="195dp"
        android:layout_height="66dp"
        android:layout_marginTop="80dp"
        android:onClick="newPro"
        android:text="@string/newSuplier"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/btnNewWorker" />

</androidx.constraintlayout.widget.ConstraintLayout>