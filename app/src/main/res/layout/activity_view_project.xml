<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/mad_background"
    tools:context=".viewProject">

    <TextView
        android:id="@+id/textView3"
        android:layout_width="210dp"
        android:layout_height="52dp"
        android:text="@string/viewPro"
        android:textColor="#0B0808"
        android:textSize="36sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.498"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.192" />

    <Button
        android:id="@+id/viewCustomer"
        android:layout_width="195dp"
        android:layout_height="66dp"
        android:layout_marginTop="110dp"
        android:onClick="projects"
        android:text="@string/cusPro"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.497"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView3" />

    <Button
        android:id="@+id/viewWorker"
        android:layout_width="195dp"
        android:layout_height="66dp"
        android:layout_marginTop="80dp"
        android:onClick="projects"
        android:text="@string/workpro"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/viewCustomer" />

    <Button
        android:id="@+id/viewSuplier"
        android:layout_width="195dp"
        android:layout_height="66dp"
        android:layout_marginTop="80dp"
        android:onClick="projects"
        android:text="@string/supPro"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/viewWorker" />


</androidx.constraintlayout.widget.ConstraintLayout>